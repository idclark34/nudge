{
  "name": "quiet-questions",
  "version": "0.1.0",
  "description": "Quiet Questions â€“ a calm, local-first desktop journal.",
  "main": "dist/electron/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "cross-env NODE_ENV=development concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite dev --host 127.0.0.1 --port 5173",
    "dev:main": "tsup --watch --env.NODE_ENV=development",
    "dev:electron": "wait-on dist/electron/main.js && wait-on tcp:127.0.0.1:5173 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electronmon .",
    "build": "npm run clean && cross-env NODE_ENV=production npm run build:main && npm run build:renderer && electron-builder",
    "build:main": "tsup --env.NODE_ENV=production --clean",
    "build:renderer": "vite build",
    "start": "electron .",
    "postinstall": "patch-package && electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "react",
    "journal"
  ],
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "dayjs": "^1.11.19",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.4",
    "patch-package": "^8.0.1",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.0",
    "tailwindcss": "^3.4.14",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.quietquestions.app",
    "productName": "Quiet Questions",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
